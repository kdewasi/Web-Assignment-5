<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/main.css" />
<html data-theme="light"></html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/addSet' }) %>
        <div class="container mx-auto">

            <div class="hero bg-base-200 rounded-lg p-6">
                <div class="hero-content text-center ">
                    <div class="max-w-md">
                        <h1 class="text-5xl font-bold">Add Set</h1>

                        <p class="py-6">Use the below form to add a new Lego Set to the collection</p>

                    </div>
                </div>
            </div>

            <br><br><br>

            <form action="/lego/addSet" method="post">
                <!-- Name -->
                <div class="mb-4">
                    <label for="name" class="block text-sm font-semibold">Set Name:</label>
                    <input type="text" id="name" name="name" required class="w-full p-2 border rounded">
                </div>
    
                <div class="mb-4">
                    <label for="year" class="block text-sm font-semibold">Year:</label>
                    <input type="number" value="2000" id="year" name="year" required class="w-full p-2 border rounded">
                </div>
    
                <!-- Num Parts -->
                <div class="mb-4">
                    <label for="num_parts" class="block text-sm font-semibold">Num Parts:</label>
                    <input type="number" id="num_parts" name="num_parts" required class="w-full p-2 border rounded">
                </div>
    
                <!-- Img URL -->
                <div class="mb-4">
                    <label for="img_url" class="block text-sm font-semibold">Img URL:</label>
                    <input type="url" id="img_url" name="img_url" required class="w-full p-2 border rounded">
                </div>
    
                <!-- Theme -->
                <div class="mb-4">
                    <label for="theme_id" class="block text-sm font-semibold">Theme:</label>
                    <select id="theme_id" name="theme_id" required class="w-full p-2 border rounded">
                        <% themes.forEach(theme => { %>
                            <option value="<%= theme.id %>"><%= theme.name %></option>
                        <% }) %>
                    </select>
                </div>
    
                <!-- Set Number -->
                <div class="mb-4">
                    <label for="set_num" class="block text-sm font-semibold">Set Number:</label>
                    <input type="text" id="set_num" name="set_num" required class="w-full p-2 border rounded">
                </div>
    
                <!-- Submit Button -->
                <div>
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Submit</button>
                </div>
            </form>
        </div>


</body>
</html>